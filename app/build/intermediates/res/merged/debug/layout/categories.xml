<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_horizontal|center_horizontal" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <RelativeLayout
            android:id="@+id/view_top"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:background="@color/menu_frame_light_gray" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/cat_title"
                android:textColor="@color/text_color"
                android:textSize="@dimen/view_top_text_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/right_arrow" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linear_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_top"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@color/menu_frame_dark_gray"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/linear_Rings"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/img_Rings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/rings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Earrings"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal" >

                <ImageView
                    android:id="@+id/img_Earrings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/earrings" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_Bracletes"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_Bracletes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/bracletes" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_Necklaces"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.25"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_Necklaces"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/necklaces" />
            </LinearLayout>
           <!-- <LinearLayout
                android:id="@+id/linear_Pendants"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_Pendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/pendants" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_Twins"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_Twins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/twins" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_Wedding_Rings"
                android:layout_width="wrap_content"
